---
import Layout from "../layouts/Layout.astro";
import LegalNotice from '../../LEGAL_NOTICE.md';
import PrivacyPolicyContent from '../../PRIVACY_POLICY.md';
---

<Layout>
  <div class="container py-5">
    <h1 class="text-white mb-4">Aviso Legal y Política de Privacidad</h1>
    <section class="bg-grey-dark rounded p-4 mb-4">
      <h2 class="h4 text-white mb-3">Aviso Legal</h2>
      <div class="text-white" style="white-space:pre-line;">
        <LegalNotice />
      </div>
    </section>
    <section class="bg-grey-dark rounded p-4">
      <h2 class="h4 text-white mb-3">Política de Privacidad</h2>
      <div class="text-white" style="white-space:pre-line;">
        <PrivacyPolicyContent />
      </div>
    </section>
  </div>
</Layout>
